/* pages/files/files.wxss */
.tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1a73e8;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1a73e8;
  border-radius: 3rpx;
}

/* 文件列表 */
.file-list {
  background-color: #fff;
  border-radius: 12rpx;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.file-item:last-child {
  border-bottom: none;
}

.file-thumb {
  width: 140rpx;
  height: 100rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  position: relative;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.file-thumb image {
  width: 100%;
  height: 100%;
}

.video-duration {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.video-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-icon text {
  color: #fff;
  font-size: 24rpx;
  margin-left: 4rpx;
}

.file-info {
  flex: 1;
  min-width: 0;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.file-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.file-time {
  margin-right: 20rpx;
}

.file-actions {
  padding: 20rpx;
}

.delete-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #ffebee;
  color: #ea4335;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.empty-icon-wrapper {
  margin-bottom: 30rpx;
}

.empty-icon-text {
  font-size: 100rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #bbb;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  color: #999;
}

.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #eee;
  border-top-color: #1a73e8;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 文件占位符 */
.file-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
}

.file-placeholder text {
  font-size: 48rpx;
}

/* 未上传文件样式 */
.file-item.not-uploaded {
  opacity: 0.85;
}

.device-badge {
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  background-color: rgba(255, 152, 0, 0.9);
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.file-status {
  margin-top: 6rpx;
}

.status-text {
  font-size: 22rpx;
  color: #ff9800;
  background-color: #fff8e1;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}
