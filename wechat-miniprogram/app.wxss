/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
}

.container {
  padding: 20rpx;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: #1a73e8;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  text-align: center;
}

.btn-primary:active {
  background-color: #1557b0;
}

.btn-danger {
  background-color: #ea4335;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  text-align: center;
}

.btn-danger:active {
  background-color: #c5221f;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  text-align: center;
  border: 1rpx solid #ddd;
}

.status-online {
  color: #34a853;
}

.status-offline {
  color: #ea4335;
}

.text-secondary {
  color: #666;
  font-size: 28rpx;
}

.text-small {
  color: #999;
  font-size: 24rpx;
}
