<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main content container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Recording interface container (包含录制界面和按钮) -->
        <FrameLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 录制界面布局 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/menu_background">

            <!-- 左侧：4个小画面竖排（25%宽度） -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- 前 -->
                <FrameLayout
                    android:id="@+id/preview_top_left_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/preview_border"
                    android:clickable="true">

                    <com.kooo.evcam.AutoFitTextureView
                        android:id="@+id/texture_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/label_front"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:background="@drawable/camera_label_background"
                        android:gravity="center"
                        android:text="前"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </FrameLayout>

                <!-- 后 -->
                <FrameLayout
                    android:id="@+id/preview_top_right_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/preview_border"
                    android:clickable="true">

                    <com.kooo.evcam.AutoFitTextureView
                        android:id="@+id/texture_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/label_back"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:background="@drawable/camera_label_background"
                        android:gravity="center"
                        android:text="后"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </FrameLayout>

                <!-- 左 -->
                <FrameLayout
                    android:id="@+id/preview_bottom_left_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/preview_border"
                    android:clickable="true">

                    <com.kooo.evcam.AutoFitTextureView
                        android:id="@+id/texture_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/label_left"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:background="@drawable/camera_label_background"
                        android:gravity="center"
                        android:text="左"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </FrameLayout>

                <!-- 右 -->
                <FrameLayout
                    android:id="@+id/preview_bottom_right_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/preview_border"
                    android:clickable="true">

                    <com.kooo.evcam.AutoFitTextureView
                        android:id="@+id/texture_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/label_right"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:background="@drawable/camera_label_background"
                        android:gravity="center"
                        android:text="右"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </FrameLayout>
            </LinearLayout>

            <!-- 右侧：主视角画面（75%宽度） -->
            <FrameLayout
                android:id="@+id/main_preview_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:background="#000000"
                android:padding="8dp"
                android:clickable="true">

                <com.kooo.evcam.AutoFitTextureView
                    android:id="@+id/texture_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/label_main"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/camera_label_background"
                    android:gravity="center"
                    android:text="全景"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                
                <!-- 录制状态显示（右上角） -->
                <TextView
                    android:id="@+id/tv_recording_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />
            </FrameLayout>
        </LinearLayout>

            <!-- 底部控制按钮（悬浮在录制界面上） -->
            <LinearLayout
                android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_container_background"
            android:padding="8dp"
            android:elevation="8dp">

            <Button
                android:id="@+id/btn_menu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="6dp"
                android:text="☰"
                android:textSize="40sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/button_text"
                android:elevation="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/btn_start_record"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="6dp"
                android:text="○"
                android:textSize="50sp"
                android:backgroundTint="@color/button_background"
                android:textColor="#FF0000"
                android:elevation="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="6dp"
                android:text="◉"
                android:textSize="45sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/button_text"
                android:elevation="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="6dp"
                android:text="✕"
                android:textSize="45sp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/button_text"
                android:elevation="4dp"
                android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="16dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Fragment container for other screens -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        android:background="@color/nav_background"
        android:elevation="8dp"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu"
        app:itemTextAppearance="@style/NavigationMenuTextAppearance"
        app:subheaderTextAppearance="@style/NavigationSubheaderTextAppearance"
        app:itemBackground="@drawable/nav_item_background"
        app:itemIconTint="@color/nav_icon_color_selector"
        app:itemTextColor="@color/nav_text_color_selector" />

</androidx.drawerlayout.widget.DrawerLayout>
