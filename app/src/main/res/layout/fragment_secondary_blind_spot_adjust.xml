<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:background="@color/menu_background">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="副屏补盲悬浮窗位置"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⌂"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="显示屏幕 (Display ID)"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_display_selection"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_display_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前屏幕分辨率: 未知"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置与大小"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="X 坐标"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000" />

                    <EditText
                        android:id="@+id/et_x_value"
                        android:layout_width="96dp"
                        android:layout_height="48dp"
                        android:text="0"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/spinner_background"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="Y 坐标"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000" />

                    <EditText
                        android:id="@+id/et_y_value"
                        android:layout_width="96dp"
                        android:layout_height="48dp"
                        android:text="139"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/spinner_background"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="宽度"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_width"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000" />

                    <EditText
                        android:id="@+id/et_width_value"
                        android:layout_width="96dp"
                        android:layout_height="48dp"
                        android:text="318"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/spinner_background"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="高度"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekbar_height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="2000" />

                    <EditText
                        android:id="@+id/et_height_value"
                        android:layout_width="96dp"
                        android:layout_height="48dp"
                        android:text="236"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/spinner_background"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高级设置"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="悬浮窗旋转"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_rotation"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="屏幕方向适配"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_screen_orientation"
                        android:layout_width="150dp"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="显示识别边框 (白色)"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存配置并应用"
                android:textSize="20sp"
                android:minHeight="56dp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/button_text"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
