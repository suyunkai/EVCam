<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/menu_background">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰"
            android:textSize="18sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="软件设置"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Settings content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 车型配置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车型配置"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择车型以适配摄像头布局"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_car_model"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@color/card_background" />
            </LinearLayout>

            <!-- 自定义摄像头配置按钮（仅自定义车型显示） -->
            <Button
                android:id="@+id/btn_custom_camera_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="配置摄像头"
                android:textSize="20sp"
                android:minHeight="56dp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/button_text"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Debug mode switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Debug 模式"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="将 Log.d 转换为 Log.i"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_debug_to_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- 保存日志按钮（仅 Debug 开启时显示） -->
            <Button
                android:id="@+id/btn_save_logs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存日志"
                android:textSize="20sp"
                android:minHeight="56dp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/button_text"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Overlay permission for background wake-up -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="后台唤醒权限"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_overlay_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未授权"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_overlay_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去授权"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Accessibility service for keep-alive -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保活服务（推荐）"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_accessibility_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未启用 - 防止应用被系统清理"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_accessibility_permission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去启用"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:backgroundTint="@color/button_background"
                    android:textColor="@color/button_text"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Auto start on boot switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开机自启动"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系统启动后自动运行应用"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_auto_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Keep alive service switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定时保活任务"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每15分钟唤醒一次，保持进程活跃"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_keep_alive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Usage instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用说明"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Debug 模式：开启后，应用的调试日志将以 Info 级别输出，便于在生产环境中查看\n\n• 保存日志：将当前应用日志导出到文件，方便问题排查和技术支持\n\n• 后台唤醒权限：允许应用在后台收到钉钉命令时自动唤醒屏幕并执行拍照/录制。如未授权，后台命令将无法正常工作\n\n• 保活服务（无障碍）：启用后应用进程优先级提高，防止被系统清理。本服务不会监控用户操作，仅用于提高后台稳定性\n\n• 开机自启动：启用后系统启动时自动运行应用（后台模式），适合车机系统无人值守场景\n\n• 定时保活任务：每15分钟自动唤醒一次，保持应用进程活跃，配合无障碍服务使用效果更佳"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
