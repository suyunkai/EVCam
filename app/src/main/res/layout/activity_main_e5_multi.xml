<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main content container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Recording interface -->
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1C1C1E">

            <!-- 主内容区域：左侧按钮 + 右侧摄像头视图 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <!-- 左侧按钮区域 -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#2C2C2E">
                    
                    <Button
                        android:id="@+id/btn_start_record"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp"
                        android:text="录制"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:backgroundTint="#3A3A3C"
                        android:textColor="#FFFFFF"
                        android:elevation="0dp"
                        android:insetTop="12dp"
                        android:insetBottom="12dp"
                        app:cornerRadius="10dp" />
                    
                    <Button
                        android:id="@+id/btn_take_photo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp"
                        android:text="拍照"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:backgroundTint="#3A3A3C"
                        android:textColor="#FFFFFF"
                        android:elevation="0dp"
                        android:insetTop="12dp"
                        android:insetBottom="12dp"
                        app:cornerRadius="10dp" />
                    
                    <Button
                        android:id="@+id/btn_playback"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp"
                        android:text="回放"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:backgroundTint="#3A3A3C"
                        android:textColor="#FFFFFF"
                        android:elevation="0dp"
                        android:insetTop="12dp"
                        android:insetBottom="12dp"
                        app:cornerRadius="10dp" />
                    
                    <Button
                        android:id="@+id/btn_photos"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp"
                        android:text="照片"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:backgroundTint="#3A3A3C"
                        android:textColor="#FFFFFF"
                        android:elevation="0dp"
                        android:insetTop="12dp"
                        android:insetBottom="12dp"
                        app:cornerRadius="10dp" />
                    
                    <Button
                        android:id="@+id/btn_settings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp"
                        android:text="设置"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:backgroundTint="#3A3A3C"
                        android:textColor="#FFFFFF"
                        android:elevation="0dp"
                        android:insetTop="12dp"
                        android:insetBottom="12dp"
                        app:cornerRadius="10dp" />
                    
                    <Button
                        android:id="@+id/btn_exit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="关闭"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:backgroundTint="#3A3A3C"
                        android:textColor="#FFFFFF"
                        android:elevation="0dp"
                        android:insetTop="12dp"
                        android:insetBottom="12dp"
                        app:cornerRadius="10dp" />
                </LinearLayout>
                
                <!-- 右侧摄像头视图区域 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    
                    <!-- 左侧：左摄像头 -->
                    <FrameLayout
                        android:id="@+id/camera_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="#2C2C2E"
                        android:elevation="1dp">
                        
                        <com.kooo.evcam.AutoFitTextureView
                            android:id="@+id/texture_left"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />
                        
                        <TextView
                            android:id="@+id/label_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:background="@null"
                            android:gravity="center"
                            android:text="左"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="2dp"
                            android:layout_margin="4dp"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </FrameLayout>
                    
                    <!-- 中间：前、后摄像头 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">
                        
                        <!-- 上：前摄像头 -->
                        <FrameLayout
                            android:id="@+id/camera_front"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="8dp"
                            android:background="#2C2C2E"
                            android:elevation="1dp">
                            
                            <com.kooo.evcam.AutoFitTextureView
                                android:id="@+id/texture_front"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center" />
                            
                            <TextView
                                android:id="@+id/label_front"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|start"
                                android:background="@null"
                                android:gravity="center"
                                android:text="前"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="2dp"
                                android:layout_margin="4dp"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2" />
                        </FrameLayout>
                        
                        <!-- 下：后摄像头 -->
                        <FrameLayout
                            android:id="@+id/camera_back"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            android:background="#2C2C2E"
                            android:elevation="1dp">
                            
                            <com.kooo.evcam.AutoFitTextureView
                                android:id="@+id/texture_back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center" />
                            
                            <TextView
                                android:id="@+id/label_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|start"
                                android:background="@null"
                                android:gravity="center"
                                android:text="后"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="2dp"
                                android:layout_margin="4dp"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2" />
                        </FrameLayout>
                    </LinearLayout>
                    
                    <!-- 右侧：右摄像头 -->
                    <FrameLayout
                        android:id="@+id/camera_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="#2C2C2E"
                        android:elevation="1dp">
                        
                        <com.kooo.evcam.AutoFitTextureView
                            android:id="@+id/texture_right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />
                        
                        <TextView
                            android:id="@+id/label_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:background="@null"
                            android:gravity="center"
                            android:text="右"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="2dp"
                            android:layout_margin="4dp"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 录制状态显示（右上角） -->
        <TextView
            android:id="@+id/tv_recording_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/camera_label_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="00:00 / 1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- Fragment container for playback -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu"
        app:itemTextAppearance="@style/NavigationMenuTextAppearance"
        app:itemIconSize="28dp" />

</androidx.drawerlayout.widget.DrawerLayout>
